<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_margin="10dp"
    android:layout_width="380dp"
    app:cardBackgroundColor="#fff"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="2dp"
    android:layout_height="340dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/inner_linear_layout"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="196dp"
            android:id="@+id/news_image_view"
            android:src="@drawable/card_view_different_states"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/headline_text_view"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Default Headline"/>

            <TextView
                android:id="@+id/additional_information_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:maxLines="2"
                android:textColor="@android:color/darker_gray"
                android:text="Default additional information"
                android:lineSpacingExtra="8sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_popup_menu_button"
                android:background="@null"
                android:paddingBottom="4dp"
                android:layout_gravity="right"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:src="@drawable/ic_action_more_horiz"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
